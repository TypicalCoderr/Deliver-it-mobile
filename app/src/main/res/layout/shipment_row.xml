<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_gravity="left"
            android:paddingLeft="15dp"
            android:src="@drawable/box" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="85">

            <TextView
                android:id="@+id/_shipmentId"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="Shipment ID :"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/shipmentId"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="12"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/_arrivalDate"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/_shipmentId"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:text="DropOff Due: "
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/arrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shipmentId"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginRight="30dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="12-05-2021"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>