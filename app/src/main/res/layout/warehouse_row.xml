<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    app:strokeWidth="1dp"
    app:strokeColor="@color/black"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/shipmentId_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="200">

            <TextView
                android:id="@+id/_shipmentId"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Shipment ID:"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/warehouse_shipmentId"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:text="#12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_warehouse"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Warehouse"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <!--            <TextView-->
            <!--                android:id="@+id/user_lastname"-->
            <!--                android:layout_width="80dp"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:fontFamily="@font/poppins_regular"-->
            <!--                android:text="De Silva"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textColor="@color/white" />-->

            <TextView
                android:id="@+id/warehouse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="left"
                android:text="Colombo" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/pickup_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_row"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp"
            android:weightSum="100">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:src="@drawable/drop_package" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Drop Location"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="229/8A, Colombo,Townhall." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="Comment"
                android:textSize="9dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/about_package"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Call when you will be near entrance"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"

            android:weightSum="100">

            <TextView
                android:id="@+id/drop_date"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="Nov, 23 2021"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView

                android:layout_width="60dp"
                android:layout_height="25dp"
                android:src="@drawable/price" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Rs: 2002 /="
                android:textStyle="bold"
                android:textColor="@color/white"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>