        <LinearLayout
            android:id="@+id/trackId_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="200">

            <TextView
                android:id="@+id/_trackId"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Tacking ID:"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/track_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:text="#12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shipmentId_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="200">

            <TextView
                android:id="@+id/_shipmentId"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Shipment ID:"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/track_shipmentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:text="#12" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/drop_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_row"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp"
            android:weightSum="100">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:src="@drawable/pick_package" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Pick Location"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/s_user_address"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="229/8A, Colombo,Townhall." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dottedline"/>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/pickup_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_row"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:weightSum="100">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:src="@drawable/drop_package" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Drop Location"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/r_user_address"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="229/8A, Colombo,Townhall." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>





        <LinearLayout
            android:id="@+id/_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:layout_marginTop="10dp"
                android:text="In Warehouse"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/_status_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:text="Driver has pickup your delivery."
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:text="Dec, 23 2021"
                android:textSize="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:gravity="right"
                android:text="Driver :"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/driver_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:text="Sachindra Rodrigo" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/_driver_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:text="Driver phone:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/driver_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:text="+0778909877" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/_driver_vehicle_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:text="Driver phone:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/driver_vehicle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="right"
                android:text="CBD-123312" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>